 <div class='row'>
  <form action="/project/<%=project._id%>/comment">
    <div class="input-field col s12 m10">
      <!-- <p class="teal-text" style="font-size: 1.3vw">Add New Comment:</p> -->
      <textarea style="overflow-y: scroll ; resize:none;height: 100px;max-height: 100px" rows="30" cols="5" id="textarea2" class="materialize-textarea" placeholder="Add Comments"></textarea>
