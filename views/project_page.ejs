    event.preventDefault()
     $(this).html(function(data){
      vote = data.split(" ")[1]
      return "UPVOTE "+ parseInt(vote)+1
     })
     uri = $("#data").text()
    $.ajax({
        global: false,
        type: 'POST',
        url:'/project/'+uri+'/vote',
        dataType: 'html',
        data:"votes",
        success: function (result) {
            console.log(result);
        },
        error: function (request, status, error) {
            console.log("error has taken place",error );
        }
    });
  })
